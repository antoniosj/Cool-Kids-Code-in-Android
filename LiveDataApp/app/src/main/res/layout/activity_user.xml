<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.user.UserActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/txt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintVertical_bias="0.484"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="75dp"
            tools:layout_editor_absoluteX="156dp" android:id="@+id/button"/>
    <ImageView
            android:src="@mipmap/ayaya"
            android:layout_width="92dp"
            android:layout_height="110dp" tools:layout_editor_absoluteY="301dp"
            tools:layout_editor_absoluteX="27dp" android:id="@+id/imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>